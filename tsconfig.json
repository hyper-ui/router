{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "declaration": true,
        "declarationDir": "./typings",
        "outDir": "./raw",
        "rootDir": "./src",
        "baseUrl": "./node_modules",
        "paths": {
            "@hyper-ui/core": [
                "@hyper-ui/core/index"
            ]
        },
        "strict": true,
        "noUnusedLocals": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": [
        "src"
    ]
}